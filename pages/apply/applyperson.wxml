<!--pages/apply/applyperson.wxml-->
<form>
    <view class="list">
        <view class="item item-divider">
            基本资料(以下项目均为必填项)
        </view>
        <view class="item item-icon-right ">
            证件类型
            <view class="item-note">
                <picker bindchange="bindCredentialsPickerChange" value="{{credentialsIndex}}"
                        range="{{credentials}}">
                    <view class="picker">
                        {{credentials[credentialsIndex]}}
                    </view>
                </picker>
            </view>
            <text class="icon-accessory iconfont icon-xiangyoujiantou"></text>
        </view>
        <view class="item item-input">
            <span class="input-label"> 证件号码 </span>
            <input type="text" class="text-right" placeholder="请输入您选择的证件号码"/>
        </view>
        <view class="item item-input">
            <span class="input-label"> 姓名 </span>
            <input type="text" class="text-right" placeholder="请输入您的真实姓名"/>
        </view>
        <view class="item item-icon-right">
            出生年月
            <text class="item-note">请输入您的生日</text>
            <text class="icon-accessory iconfont icon-xiangyoujiantou"></text>
        </view>
        <view class="item item-icon-right">
            民族
            <text class="item-note">汉</text>
            <text class="icon-accessory iconfont icon-xiangyoujiantou"></text>
        </view>
        <view class="item item-icon-right">
            职业
            <text class="item-note">学生</text>
            <text class="icon-accessory iconfont icon-xiangyoujiantou"></text>
        </view>
        <view class="item item-input">
            <span class="input-label"> 工作单位 </span>
            <input type="text" class="text-right" placeholder="无"/>
        </view>
        <view class="item item-icon-right">
            学历
            <text class="item-note">本科</text>
            <text class="icon-accessory iconfont icon-xiangyoujiantou"></text>
        </view>
        <view class="item item-icon-right">
            学位
            <text class="item-note">学士</text>
            <text class="icon-accessory iconfont icon-xiangyoujiantou"></text>
        </view>
        <view class="item item-icon-right">
            学历类型
            <text class="item-note">全日制</text>
            <text class="icon-accessory iconfont icon-xiangyoujiantou"></text>
        </view>
        <view class="item item-input">
            <span class="input-label"> 手机号码 </span>
            <input type="text" class="text-right" placeholder="请输入您的手机号码"/>
        </view>
        <view class="item item-input">
            <span class="input-label"> QQ号码 </span>
            <input type="text" class="text-right" placeholder="请输入您的QQ号码"/>
        </view>
        <view class="item item-input">
            <span class="input-label"> 联系地址 </span>
            <input type="text" class="text-right" placeholder=""/>
        </view>


        <view class="item item-divider">
            学校与专业(以下项目均为必填项)
        </view>
        <view class="item item-icon-right ">
            学校
            <text class="item-note">选择您就读的学校</text>
            <text class="icon-accessory iconfont icon-xiangyoujiantou"></text>
        </view>
        <view class="item item-icon-right ">
            学院
            <text class="item-note">计算机学院</text>
            <text class="icon-accessory iconfont icon-xiangyoujiantou"></text>
        </view>
        <view class="item item-icon-right ">
            入学时间
            <text class="item-note">选择您入学的时间</text>
            <text class="icon-accessory iconfont icon-xiangyoujiantou"></text>
        </view>
        <view class="item item-input">
            <span class="input-label"> 专业 </span>
            <input type="text" class="text-right" placeholder="请输入您就读的专业"/>
        </view>
        <view class="item item-input">
            <span class="input-label"> 班级 </span>
            <input type="text" class="text-right" placeholder="请输入您就读的班级"/>
        </view>

        <view class="item item-input">
            <span class="input-label"> 学号 </span>
            <input type="text" class="text-right" placeholder="请输入您的学号"/>
        </view>

        <view class="item item-divider">
            密码
        </view>
        <view class="item item-input">
            <span class="input-label"> 密码 </span>
            <input type="text" class="text-right" placeholder="请输入您的密码"/>
        </view>
        <view class="item item-input">
            <span class="input-label"> 确认密码 </span>
            <input type="text" class="text-right" placeholder="请再次输入您的密码"/>
        </view>

        <view class="padding-top">
            <button size="" plain="" bindtap="" class=" energized-bg light "> 提交</button>
        </view>
    </view>
</form>