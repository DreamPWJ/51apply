<!--pages/apply/applysubject.wxml-->
<view class="list" >
    <view class="item item-divider">
        选择考点及科目
    </view>
    <view class="item item-icon-right ">
        考试名称
        <view class="item-note">
            <picker bindchange="bindNamePickerChange" value="{{headExamTypeIndex}}" range-key="ExamTypeName"
                    range="{{headExamType}}">
                <view class="picker">
                    {{headExamType[headExamTypeIndex].ExamTypeName}}
                </view>
            </picker>
        </view>
        <text class="icon-accessory iconfont icon-xiangyoujiantou"></text>
    </view>
    <view class="item item-icon-right">
        科目选择
        <view class="item-note">
            <picker bindchange="bindexamSubjectPickerChange" value="{{examSubjectIndex}}" range-key="SubjectName"
                    range="{{examSubject}}">
                <view class="picker">
                    {{examSubject[examSubjectIndex].SubjectName}}
                </view>
            </picker>
        </view>
        <text class="icon-accessory iconfont icon-xiangyoujiantou"></text>
    </view>
    <view class="item item-icon-right">
        考试省份
        <view class="item-note">
            <picker bindchange="bindProvincePickerChange" value="{{provinceListIndex}}" range-key="ProvinceName"
                    range="{{examProvinceList}}">
                <view class="picker">
                    {{examProvinceList[provinceListIndex].ProvinceName}}
                </view>
            </picker>
        </view>
        <text class="icon-accessory iconfont icon-xiangyoujiantou"></text>
    </view>
    <view class="item item-icon-right">
        考点选择
        <view class="item-note">
            <picker bindchange="bindExamPlacePickerChange" value="{{examPlaceIndex}}" range-key="SchoolName"
                    range="{{examPlace}}">
                <view class="picker">
                    {{examPlace[examPlaceIndex].SchoolName}}
                </view>
            </picker>
        </view>

        <text class="icon-accessory iconfont icon-xiangyoujiantou"></text>
    </view>
    <view>
        <view class="item item-divider">
            增值服务
        </view>
        <checkbox-group bindchange="checkboxChange" class="light-bg">
            <label class="checkbox" wx:for="{{addServices}}">
                <checkbox value="{{item.name}}" checked="{{item.checked}}" color="#f26604"/>{{item.value}}
                <text class="float-right">￥66.66</text>
            </label>
            <label class="checkbox" >
                <checkbox  checked="true" disabled="true" color="#f26604"/>快递(默认收8元快递费用)
            </label>
        </checkbox-group>
        <navigator url="../address/addressmanage" open-type="navigate" hover-class="navigator-hover" class="text-center padding-vertical light-bg grey">点击选择地址</navigator>
    </view>
    <view class="item item-divider">
        考点信息
    </view>
    <view class="item ">
        考点电话
        <text class="item-note">{{examPlaceItem.TelNum}}</text>
    </view>
    <view class="item ">
        考点地址
        <text class="item-note text-wrap">{{examPlaceItem.Address}}</text>
    </view>
    <view class="item ">
        考点距离
        <text class="item-note">{{examPlaceItem.Diatance}}</text>
    </view>

    <!-- map.wxml -->
    <view>
        <map id="map" longitude="{{longitude}}" latitude="{{latitude}}" scale="16" controls="{{controls}}"
             bindcontroltap="controltap" markers="{{markers}}" bindmarkertap="markertap" polyline="{{polyline}}"
             bindregionchange="regionchange" show-location style="width: 100%; height: 160px;"></map>
    </view>

    <view class="padding-top">
        <button size="" plain="" bindtap="applyperson" class="energized-bg light "> 下一步</button>
    </view>
</view>